    <script>
        const emailRegex = /^[\w-\.]+@@([\w-]+\.)+[\w-]{2,4}$/;

        // Function to validate mobile number based on selected country code
        function validateMobileNumber(registerMobile, countryCode) {
            var pattern = new RegExp("^\\" + countryCode + "\\d{" + intlTelInputUtils.numberFormat[countryCode].nationalNumberPattern.replace(/\D/g, '').length + "}$");
            return pattern.test(registerMobile);
        }

        document.addEventListener("keydown", function (event) {
            if (event.target.tagName === "INPUT" && event.target.type === "text" && event.target.id === "uName") {
                document.getElementById("nameError").style.display = "none";
            }
            if (event.target.tagName === "INPUT" && event.target.type === "email" && event.target.id === "ueMail") {
                document.getElementById("emailError").style.display = "none";
            }
            if (event.target.tagName === "INPUT" && event.target.type === "text" && event.target.id === "uPhoneNumber") {
                document.getElementById("numberError").style.display = "none";
            }
        });

        function validateEmail(email) {
            return emailRegex.test(String(email).toLowerCase());
        }

        function validate() {
            var name = document.getElementById("uName").value;
            var email = document.getElementById("ueMail").value;
            var phoneNumber = document.getElementById("uPhoneNumber").value;
            var countryCode = $('.mobile_codewith_flage').intlTelInput("getSelectedCountryData").dialCode;


            if (name.trim() === '') {
                document.getElementById("nameError").style.display = "block";
                document.getElementById("nameError").innerText = 'Please Enter Your Name';
                return false;
            }

            if (email.trim() === '') {
                document.getElementById("emailError").style.display = "block";
                document.getElementById("emailError").innerText = 'Please Enter Your Email';
                return false;
            }
            if (!validateEmail(email)) {
                document.getElementById("emailError").style.display = "block";
                document.getElementById("emailError").innerText = 'Please Enter Valid Email';
                return false;
            }

            if (phoneNumber.trim() === '') {
                document.getElementById("numberError").style.display = "block";
                document.getElementById("numberError").innerText = 'Please Enter Your Phone Number';
                return false;
            }
            popup();
            return true;
        }
        function popup() {
            $(".loderarsecsec").css("display", "block");
        }
    </script>

